{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    /* Environment Settings */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],

    /* Fast Development Optimization */
    "sourceMap": false,       // Turn OFF for dev (makes compilation faster)
    "declaration": false,     // Turn OFF for dev (unless we're building a library)
    "declarationMap": false,  // Turn OFF for dev
    "incremental": true,      // Turn ON (only recompiles what changed)
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* Stricter Typechecking (Keep these, they are great) */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,      // Essential for speed (ignores errors in node_modules)

    /* Modern ESM Requirements */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}